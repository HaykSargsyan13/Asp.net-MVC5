@model IEnumerable<Homework1.Models.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @foreach (var item in Model)
    {
        <h3>Product name : @item.Name</h3>
        <p>Price : @item.Price </p>
        if(item.Description == "School")
        {
            <p>Sale </p>
        }
        <hr />
    }

</body>
</html>
